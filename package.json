{
  "name": "shudum",
  "version": "0.1.0",
  "description": "Shudum is a Sass-ier version of Netflix Tudum style blog",
  "scripts": {
    "watch-sass": "sass --watch src/scss:css",
    "build-css": "sass src/scss:css && purgecss --config purgecss.config.js --output final",
    "build": "npm run watch-sass && npm run build-css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shikhars/shudum.git"
  },
  "keywords": [
    "Netflix",
    "Tudum",
    "blog template",
    "entertainment",
    "media streaming",
    "UI design",
    "SCSS",
    "movie blog",
    "TV show blog",
    "entertainment blog"
  ],
  "author": "Shikhar Srivastava",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shikhars/shudum/issues"
  },
  "homepage": "https://github.com/shikhars/shudum",
  "devDependencies": {
    "dart-sass": "^1.25.0",
    "purgecss": "^5.0.0"
  }
}
